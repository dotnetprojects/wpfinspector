<UserControl x:Class="ChristianMoser.WpfInspector.UserInterface.XamlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:l="clr-namespace:ChristianMoser.WpfInspector.UserInterface">
    <Border BorderThickness="1" BorderBrush="{DynamicResource DefaultBorderBrush}" Background="{DynamicResource DefaultBackgroundBrush}">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="2" VerticalScrollBarVisibility="Auto">
            <l:XamlTextBlock Xaml="{Binding Xaml}" Margin="4" Width="2000"  />
        </ScrollViewer>
    </Border>
</UserControl>
